.card.mb-5.postCard
    .card-body
        %h5.card-title= post.title
        .d-flex
            %i.bi.bi-calendar(style="margin-right: 12px")
                %h6.cart-subtitle.ml-2.mb-5.text-muted(style="padding-top: 2px")= post.ref_date.strftime('%e. %B')
        %p.card-text{class: ('short' if short)}= post.body
        - if short
            = link_to 'Details', post_path(post), class: 'btn btn-primary'